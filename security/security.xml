<odoo>
    <data>
        <!-- Custom Module Category for Bed Product Mgmt-->
        <record id="module_bedmanagement_category" model="ir.module.category">
            <field name="name">Bed Product Management</field>
            <field name="sequence">1</field>
            <field name="description">Bed Product Management Category</field>
        </record>

        <!-- Groups -->
        <record id="group_bedmanagement_superadmin" model="res.groups">
            <field name="name">Super Admin</field>
            <field name="category_id" ref="bed_management.module_bedmanagement_category"/>
            <field name="users" eval="[(4, ref('base.group_user')),(4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_bedmanagement_productionManager" model="res.groups">
            <field name="name">Production Manager</field>
            <field name="category_id" ref="bed_management.module_bedmanagement_category"/>
            <field name="users" eval="[(4, ref('base.group_user')),(4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_bedmanagement_QualityInspector" model="res.groups">
            <field name="name">Quality Inspector</field>
            <field name="category_id" ref="bed_management.module_bedmanagement_category"/>
            <field name="users" eval="[(4, ref('base.group_user')),(4, ref('base.user_admin'))]"/>
        </record>


    <record id="group_bedmanagement_employee" model="res.groups">
        <field name="name">Employee</field>
        <field name="category_id" ref="bed_management.module_bedmanagement_category"/>
    </record>



     <!-- Rule: Employees can only see their own Manufacturing Orders -->
<record id="rule_employee_see_own_mrp_production" model="ir.rule">
    <field name="name">Own MOs only</field>
    <field name="model_id" ref="mrp.model_mrp_production"/>
    <field name="domain_force">[('create_uid', '=', user.id)]</field>
    <field name="groups" eval="[(4, ref('bed_management.group_bedmanagement_employee'))]"/>
    <field name="perm_read" eval="1"/>
    <field name="perm_write" eval="0"/>
    <field name="perm_create" eval="1"/>
    <field name="perm_unlink" eval="0"/>
</record>

<!-- Rule: Employees can only see their own Work Orders -->
<record id="rule_employee_see_own_workorders" model="ir.rule">
    <field name="name">Own Work Orders only</field>
    <field name="model_id" ref="mrp.model_mrp_workorder"/>
    <field name="domain_force">[('create_uid', '=', user.id)]</field>
    <field name="groups" eval="[(4, ref('bed_management.group_bedmanagement_employee'))]"/>
    <field name="perm_read" eval="1"/>
    <field name="perm_write" eval="0"/>
    <field name="perm_create" eval="1"/>
    <field name="perm_unlink" eval="0"/>
</record>

