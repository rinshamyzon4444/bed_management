<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_bed_dashboard_form" model="ir.ui.view">
        <field name="name">Dashboard</field>
        <field name="model">bed.dashboard</field>
        <field name="arch" type="xml">
            <form string="Bed Manufacturing Dashboard" create="false" edit="false" delete="false">
                <header>
                    <button name="action_refresh_dashboard" string="Refresh" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="o_bed_dashboard_layout" style="display: flex; gap: 20px; flex-wrap: wrap;">
                        <!-- MRP Stats Cards -->
                        <div style="display: flex; flex-wrap: wrap; gap: 20px;">

                            <button name="action_open_mrp_all" type="object" style="all: unset;">
                                <div style="width: 180px; height: 70px; background: #2980b9; color: white; border-radius: 8px; display: flex; align-items: center; justify-content: space-around;">
                                    <div>
                                        <i class="fa fa-cogs" style="font-size: 24px;"></i>
                                    </div>
                                    <div>
                                        <div>
                                            <strong>Total MRP Orders</strong>
                                        </div>
                                        <div>
                                            <field name="total_mrp_orders"/>
                                        </div>
                                    </div>
                                </div>
                            </button>

                            <button name="action_open_mrp_draft" type="object" style="all: unset;">
                                <div style="width: 180px; height: 70px; background: #95a5a6; color: white; border-radius: 8px; display: flex; align-items: center; justify-content: space-around;">
                                    <div>
                                        <i class="fa fa-pencil-square-o" style="font-size: 24px;"></i>
                                    </div>
                                    <div>
                                        <div>
                                            <strong>Draft</strong>
                                        </div>
                                        <div>
                                            <field name="mrp_draft_count"/>
                                        </div>
                                    </div>
                                </div>
                            </button>

                            <button name="action_open_mrp_confirmed" type="object" style="all: unset;">
                                <div style="width: 180px; height: 70px; background: #f1c40f; color: white; border-radius: 8px; display: flex; align-items: center; justify-content: space-around;">
                                    <div>
                                        <i class="fa fa-check-circle" style="font-size: 24px;"></i>
                                    </div>
                                    <div>
                                        <div>
                                            <strong>Confirmed</strong>
                                        </div>
                                        <div>
                                            <field name="mrp_confirmed_count"/>
                                        </div>
                                    </div>
                                </div>
                            </button>

                            <button name="action_open_mrp_in_progress" type="object" style="all: unset;">
                                <div style="width: 180px; height: 70px; background: #3498db; color: white; border-radius: 8px; display: flex; align-items: center; justify-content: space-around;">
                                    <div>
                                        <i class="fa fa-spinner fa-spin" style="font-size: 24px;"></i>
                                    </div>
                                    <div>
                                        <div>
                                            <strong>In Progress</strong>
                                        </div>
                                        <div>
                                            <field name="mrp_in_progress_count"/>
                                        </div>
                                    </div>
                                </div>
                            </button>

                            <button name="action_open_mrp_to_close" type="object" style="all: unset;">
                                <div style="width: 180px; height: 70px; background: #e67e22; color: white; border-radius: 8px; display: flex; align-items: center; justify-content: space-around;">
                                    <div>
                                        <i class="fa fa-hourglass-half" style="font-size: 24px;"></i>
                                    </div>
                                    <div>
                                        <div>
                                            <strong>To Close</strong>
                                        </div>
                                        <div>
                                            <field name="mrp_to_close_count"/>
                                        </div>
                                    </div>
                                </div>
                            </button>

                            <button name="action_open_mrp_done" type="object" style="all: unset;">
                                <div style="width: 180px; height: 70px; background: #27ae60; color: white; border-radius: 8px; display: flex; align-items: center; justify-content: space-around;">
                                    <div>
                                        <i class="fa fa-check" style="font-size: 24px;"></i>
                                    </div>
                                    <div>
                                        <div>
                                            <strong>Done</strong>
                                        </div>
                                        <div>
                                            <field name="mrp_done_count"/>
                                        </div>
                                    </div>
                                </div>
                            </button>

                        </div>
<!--                        graph display-->
                    <!-- Graph Display -->
<!--                    <div style="margin-top: 30px;">-->
<!--                       <div data-action="bed_dashboard_chart_action"/>-->
<!--                    </div>-->
                         <div class="o_owl_component"
                             data-owl="1"
                             data-component="bed_dashboard.ChartContainer"
                             style="width: 100%; height: 400px;" />





                        <!-- Raw Materials List -->
                        <div class="oe_form_box"
                             style="width: 100%; margin-top: 30px; box-shadow: 0 2px 8px #ccc; padding: 16px; border-radius: 8px;">
                            <h4 style="margin-bottom: 10px;">Raw Material Consumption</h4>
                            <field name="raw_material_move_ids" nolabel="1">
                                <graph>
                                    <!--                                    <field name="origin"/>-->
                                    <!--                                    <field name="state" widget="badge"/>-->
                                    <!--                                    <field name="product_id"/>-->
                                    <!--                                    <field name="product_uom_qty"/>-->
                                    <!--                                    <field name="product_uom"/>-->
                                    <!--                                    <field name="date"/>-->
                                </graph>
                            </field>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_bed_dashboard" model="ir.actions.act_window">
        <field name="name">Bed Dashboard</field>
        <field name="res_model">bed.dashboard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>


    <menuitem id="menu_bed_dashboard"
              name="Bed Dashboard"
              parent="menu_bed_root"
              action="action_bed_dashboard"
              sequence="0"/>



</odoo>