<odoo>
    <record id="view_bed_product_form" model="ir.ui.view">
        <field name="name">bed.product.form</field>
        <field name="model">bed.product</field>
        <field name="arch" type="xml">
            <form string="Bed Product">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="bed_type"/>
                        <field name="length"/>
                        <field name="width"/>
                        <field name="height"/>
                        <field name="wood_type"/>
                        <field name="addon_ids" widget="many2many_tags"/>
                        <field name="product_id" readonly="1"
                               context="{'form_view_ref': 'product.product_normal_form_view'}"/>
                        <field name="price"/>

                    </group>
                    <notebook>
                        <page string="Info">
                            <group>
                                <field name="wood_type"/>
                                <field name="addon_ids" widget="many2many_tags"/>
                                <field name="product_id" readonly="1"
                                       context="{'form_view_ref': 'product.product_normal_form_view'}"/>
                                <field name="price"/>

                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">

                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_bed_product_tree" model="ir.ui.view">
        <field name="name">bed.product.tree</field>
        <field name="model">bed.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="bed_type"/>
                <field name="wood_type"/>
                <field name="price"/>
            </tree>
        </field>
    </record>

    <record id="action_bed_product" model="ir.actions.act_window">
        <field name="name">Bed Products</field>
        <field name="res_model">bed.product</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_bed_root" name="Bed Product Catalog"/>
    <menuitem id="menu_bed_products" name="Bed Products" parent="menu_bed_root" action="action_bed_product"/>

</odoo>
