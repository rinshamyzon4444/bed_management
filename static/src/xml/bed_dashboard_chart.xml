            <!--                            <div class="col-12">-->
            <!--                                <div class="card">-->
            <!--                                    <div class="card-header">Daily MRP Orders</div>-->
            <!--                                    <div class="card-body">-->
            <!--                                        <canvas id="chart_daily_mrps" height="100"></canvas>-->
            <!--                                    </div>-->
            <!--                                </div>-->
            <!--                            </div>-->
            <!--                        </div>-->

        </div>
    </t>
</odoo>